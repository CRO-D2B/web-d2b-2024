---
import Layout from "@/layouts/Layout.astro";
import { serviceDataByName } from "@/services/services";
import ApproachSection from "@/sections/ApproachSection.astro";

const serviceData = await serviceDataByName(Astro.params.serviceName);

const {
	nombre_del_servicio,
	titulo_principal,
	subtitulo,
	cta_principal,
	titulo_1,
	texto_1,
	cta_1,
	titulo_resultados,
	texto_resultados,
	cta_resultados,
	titulo_aun_no_convencido,
	texto_aun_no_convencido,
	titulo_preguntas_frecuentes,
} = serviceData[0];
---

<Layout
	title=`${nombre_del_servicio} | D2B`
	description="descripcion del servicio"
>
	<main>
		<section class="px-6 bg-top bg-cover bg-hero">
			<div class="m-auto max-w-screen-xl pb-36 pt-52">
				<h1
					class="text-white text-5xl font-bold max-w-[30ch] mb-6 animate-fade-left"
				>
					{titulo_principal}
				</h1>
				<p class="text-white text-2xl max-w-[45ch] mb-14 animate-fade-left">
					{subtitulo}
				</p>
				<a
					class="block px-8 py-4 font-bold text-center text-white rounded-lg md:inline-block bg-primary hover:bg-dark-primary animate-fade animate-delay-300"
					href="/contacto"
				>
					{cta_principal}
				</a>
			</div>
		</section>

		<section class="px-6 py-24">
			<div class="m-auto max-w-screen-xl md:flex md:gap-12">
				<h2
					class="w-full mb-8 text-3xl font-bold md:mb-0 md:text-4xl text-primary-purple"
				>
					{titulo_1}
				</h2>
				<div>
					<div
						class="mb-10 [&>p]:mb-6 md:[&>p]:mb-12 [&>p:last-child]:mb-0 [&_strong]:text-primary [&_a]:text-primary [&_a]:underline"
						set:html={texto_1}
					/>
					<a
						class="block px-8 py-4 font-bold text-center text-white rounded-lg md:inline-block bg-primary hover:bg-dark-primary"
						href="/contacto">{cta_1}</a
					>
				</div>
			</div>
		</section>

		<ApproachSection />

		<section class="px-6 py-24">
			<div class="m-auto max-w-screen-xl">
				<h2
					class="block mb-6 text-3xl font-bold md:text-4xl text-primary-purple"
				>
					{titulo_resultados}
				</h2>
				<div
					class="mb-10 max-w-[80ch] md:[&>p]:text-xl [&>p]:mb-6 md:[&>p]:mb-12 [&>p:last-child]:mb-0 [&_a]:text-primary [&_a]:underline"
					set:html={texto_resultados}
				/>
				<a
					class="block px-8 py-4 font-bold text-center text-white rounded-lg md:inline-block bg-primary hover:bg-dark-primary animate-fade animate-delay-300"
					href="/contacto"
				>
					{cta_resultados}
				</a>
			</div>
		</section>

		<section class="px-6 py-24">
			<div class="m-auto max-w-screen-xl">
				<h2
					class="block mb-6 text-3xl font-bold md:text-4xl text-primary-purple"
				>
					{titulo_aun_no_convencido}
				</h2>
				<div
					class="mb-10 max-w-[80ch] md:[&>p]:text-xl [&>p]:mb-6 md:[&>p]:mb-12 [&>p:last-child]:mb-0 [&_a]:text-primary [&_a]:underline"
					set:html={texto_aun_no_convencido}
				/>
			</div>
		</section>

		<section class="px-6 py-24">
			<div
				class="p-12 m-auto border-2 max-w-screen-xl bg-neutral-100 rounded-2xl border-neutral-200"
			>
				<h2
					class="block mb-6 text-3xl font-bold md:text-4xl text-primary-purple"
				>
					{titulo_preguntas_frecuentes}
				</h2>
				<div
					class="mb-10 max-w-[80ch] md:[&>p]:text-xl [&>p]:mb-6 md:[&>p]:mb-12 [&>p:last-child]:mb-0 [&_a]:text-primary [&_a]:underline"
					set:html={texto_aun_no_convencido}
				/>
			</div>
		</section>
	</main>
</Layout>

