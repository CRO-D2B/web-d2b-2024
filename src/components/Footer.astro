---
import { Image } from "astro:assets";
const menuItems = ["Inicio", "Servicios", "Casos", "Blog", "Contacto"];
---

<footer class="w-full">
  <section class="bg-neutral-200">
    <div
      class="flex items-start justify-between max-w-screen-xl px-6 py-12 m-auto"
    >
      <div class="flex flex-col gap-6">
        <h6 class="text-3xl w-96">Lorem ipsum dolor sit amet consectetur</h6>
        <button
          class="px-6 py-3 text-white bg-black rounded-lg w-fit animate-fade animate-delay-500"
        >
          Botón
        </button>
      </div>

      <div class="flex flex-col gap-2">
        <h6 class="text-sm">Mapa del sitio</h6>
        <nav class="flex flex-col">
          {
            menuItems.map((item) => (
              <a class={`py-1 text-right hover:text-accent`} href="#">
                {item}
              </a>
            ))
          }
        </nav>
      </div>
    </div>
  </section>

  <section class="bg-neutral-400">
    <div
      class="flex items-center max-w-screen-xl gap-4 px-6 py-12 m-auto text-white"
    >
      <Image width={48} height={48} src="/D2B-logo.svg" alt="Logo de D2B" />
      <span class="text-4xl">|</span>
      <span>Av. Apoquindo No 6410, Of. 212, Las Condes, Santiago, Chile</span>
      <span class="text-4xl">|</span>
      <a href="#">Política de Cookies</a>
      <span class="text-4xl">|</span>
      <a href="#">LinkIn</a>
    </div>
  </section>
</footer>
