---
import { footerMenuItems, socialMedia } from "@/constants";
import LinkedinIcon from "@/icons/linkedin.astro";
import YoutubeIcon from "@/icons/youtube.astro";

const { pathname } = Astro.url;
const isContactPage = pathname.startsWith("/contacto");
---

<footer class="w-full">
  <section class="px-6">
    <div
      class="flex flex-col items-start justify-between py-12 m-auto max-w-screen-xl md:flex-row"
      ,
    >
      <div
        class:list={[
          "flex flex-col w-full pb-12 border-b border-white gap-6 md:border-none md:pb-0",
          { hidden: isContactPage },
        ]}
      >
        <h6
          class="text-3xl font-bold text-center text-white md:text-left md:text-4xl md:max-w-96"
        >
          Tu socio estratégico en el mundo digital
        </h6>
        <a
          href="/contacto"
          class="w-full px-8 py-4 font-bold text-center text-white rounded-lg bg-primary hover:bg-dark-primary md:w-fit"
        >
          ¡Quiero que me contacten!
        </a>
      </div>

      <nav
        class:list={[
          "flex flex-wrap items-center justify-center w-full pt-12 font-bold text-white  md:text-nowrap md:pt-0 gap-x-8 gap-y-6",
          { "md:grid md:grid-cols-2 md:max-w-max": !isContactPage },
        ]}
      >
        {
          footerMenuItems.map(({ name, slug }) => (
            <a class="p-1 text-lg w-fit hover:text-primary-purple" href={slug}>
              {name}
            </a>
          ))
        }
        <div
          class="flex justify-center flex-grow order-8 w-full p-1 md:justify-end gap-2 md:w-fit"
        >
          <a
            class="inline p-3 bg-white text-primary-purple rounded-xl hover:bg-accent-purple"
            href={socialMedia.linkedin.url}
            target="_blank"
          >
            <LinkedinIcon size={20} /></a
          >
          <a
            class="inline p-3 bg-white text-primary-purple rounded-xl hover:bg-accent-purple"
            href={socialMedia.youtube.url}
            target="_blank"
          >
            <YoutubeIcon size={20} /></a
          >
        </div>
      </nav>
    </div>
  </section>

  <section class="px-6">
    <div
      class="flex justify-center py-12 m-auto border-t border-white max-w-screen-xl md:justify-start"
    >
      <span class="text-lg text-center text-white">
        Av. Apoquindo No 6410, Of. 212, Las Condes, Santiago, Chile
      </span>
    </div>
  </section>
</footer>

<style>
  footer {
    background:
      radial-gradient(
        circle at 60% 100%,
        rgb(147, 53, 141, 0.8),
        rgb(147, 53, 141, 0) 60%
      ),
      radial-gradient(
          circle at 30% 0%,
          rgb(91, 104, 223, 0.9),
          rgb(91, 104, 223, 0) 60%
        )
        #1e1e1e;
  }
</style>
