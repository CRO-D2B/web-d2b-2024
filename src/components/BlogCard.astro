---
import { Image } from "astro:assets";

const { title, excerpt, img, caption, author, readingTime, slug } = Astro.props;
---

<a href={`/blog/${slug}`}>
  <article
    class="flex flex-col gap-4 w-full h-full rounded-lg shadow-md overflow-hidden"
  >
    <Image
      class="w-full h-56 object-cover shadow-md rounded-b-lg"
      height={300}
      width={300}
      src={img}
      alt={caption}
    />

    <header class="px-4">
      <h3 class="text-center font-bold text-pretty text-lg text-neutral-800">
        {title}
      </h3>
    </header>

    <div class="px-4">
      <div class="text-clamp-4 [&>p]:text-neutral-600" set:html={excerpt} />
    </div>

    <footer class="px-3 pb-4 flex-grow content-end">
      <span class="text-primary/80 font-semibold">
        {author}
      </span>
      <span>
        - Lectura:
        {readingTime}
      </span>
    </footer>
  </article>
</a>
